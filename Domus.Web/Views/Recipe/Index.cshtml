@model Domus.Web.Models.RecipeIndexViewModel
<div id="recipeIndexView">
    
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div>
                    <a  href="@Url.Action("CreateNewRecipe")" class="btn btn-primary btn-block" role="button">Create Recipe</a>
                </div>
                <div class="list-group">
                    @foreach (var category in Model.Categories)
                    {
                        <a href="@Url.Action("Index",new{category=@category.Decription})"class="list-group-item">@category.Decription</a>
                    }
                </div>
               
            </div>
            <div class="col-md-10">
                <div class="input-group">   
                    <input type="text" class="form-control" placeholder="Search text here" data-bind="searchText">
                    <span class="input-group-btn">
                        <button class="btn btn-default glyphicon glyphicon-search" type="button" data-bind="click: executeSearch"/>
                    </span>
                </div>
            </div>
        </div>
    
</div>
