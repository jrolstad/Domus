@model Domus.Web.Models.RecipeIndexViewModel

<div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Rolstad Recipes</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Recipes</a></li>
                <li><a href="#about">About</a></li>
            </ul>
        </div>
        
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="list-group">
                @foreach (var category in Model.Categories)
                {
                    <a href="#"class="list-group-item">@category.Decription</a>
                }
            </div>
            <a class="btn btn-primary btn-lg" role="button">Create Recipe</a>
        </div>
        <div class="col-md-10">
        <div class="input-group">   
            <input type="text" class="form-control" placeholder="Search text here">
            <span class="input-group-btn">
                <button class="btn btn-default glyphicon glyphicon-search" type="button"/>
            </span>
        </div>
        </div>
    </div>
</div>
