@model Domus.Web.Models.RecipeViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header">
        <h2>
            @Model.RecipeTitle
        </h2>
    </div>

    <form role="form" action="@Url.Action("SaveRecipe")">
        <div class="form-group">
            <input type="hidden"id="RecipeId" name="RecipeId" value="@Model.RecipeId"/>
        </div>
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
        </div>
        <div class="form-group">
            <label for="Name">Servings</label>
            <input type="number" class="form-control" id="Servings" name="Servings" value="@Model.Servings">
        </div>
        <div class="form-group">
            
            <label for="Rating">Rating</label>
            <input type="range" min="0" max="5" value="@Model.Rating" step="0.5" id="Rating" name="Rating">
            <div class="rateit" data-rateit-backingfld="#Rating" data-rateit-resetable="false"></div>
        </div>
        <div class="form-group">
            <label for="Name">Category</label>
            <select class="form-control" id="Category" name="Category">
             @foreach (var category in Model.AvailableCategories)
             {
                 <option selected="@(category == Model.Category)">@category</option>
             }
            </select>
        </div>
        <div class="form-group">
            <label for="Name">Ingredients</label>
            <textarea  class="form-control" id="Ingredients" name="Ingredients" rows="5">@Model.Ingredients</textarea>
        </div>
        <div class="form-group">
            <label for="Name">Directions</label>
            <textarea  class="form-control" id="Directions" name="Directions" rows="5">@Model.Directions</textarea>
        </div>
        <div class="form-group">
            <label for="Name">Source</label>
            <input type="text" class="form-control" id="Source" name="Source" value="@Model.Source">
        </div>

        <button type="submit" class="btn btn-default">Save</button>
        <a  href="@Url.Action("Index")" class="btn btn-primary" role="button">Cancel</a>
    </form>

</div>

