@model Domus.Web.UI.Models.Recipes.RecipeIndexViewModel

@{
    ViewBag.Title = "Recipes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="recipeSearch">
@using (@Html.BeginForm("Index", "Recipe"))
{
    @Html.TextBoxFor(m=>m.SearchText)
    <input id="searchButton" type="submit" value="Search"/>
}
</div>

<div id="recipeCategories">
    @Html.Partial("Categories",Model.Categories)
    <br/>
    <br/>
    @Html.ActionLink("Add Recipe","Create",new{},new{id="createButton"})
</div>

<div id="recipeCommands">
    
</div>

<div id="recipeSearchResults">
   @Html.Partial("SearchResults",Model.SearchResults)
</div>


<script src="@Url.Content("~/Scripts/RecipeIndex.js")" type="text/javascript"></script>